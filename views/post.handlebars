<div id={{post.id}}>
    <span>{{post.title}}</span>
    <span>{{post.likes}}</span>
    <span>{{post.createdAt}}</span>
    <button id={{post.id}}>Like</button>
</div>
<h1>Comments</h1>
{{#each post.Comments}}

<div>
    <span>{{content}}</span>
    <span>{{likes}} &nbsp; likes</span>
    <span>{{createdAt}}</span>
    <button id={{id}}>Like</button>
</div>
{{/each}}
{{#if loggedIn}}
<input type="text" placeholder="Add comment" />
<input id="submit" data-id={{post.id}} value="Submit" type="button" />
{{/if}}
<script src="/js/post.js"></script>