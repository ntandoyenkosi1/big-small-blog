<div class="post-container">
    <div class="single-post" id={{post.id}}>
        <div class="post">
            <div class="user">
                <span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor"
                        class="bi bi-person-circle" viewBox="0 0 16 16">
                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                        <path fill-rule="evenodd"
                            d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                    </svg>
                </span>
                <span>{{post.User.name}}</span>
            </div>
            <div class="content">
                <h2>{{post.title}}</h2>
                <span>{{post.content}}</span>
                <label> posted on {{format_date post.createdAt}}</label>
            </div>

            <div class="like">
                <span>{{post.likes}} &nbsp;</span>
                {{#if loggedIn}}
                <button id={{post.id}}>Like</button>
                {{/if}}
            </div>
        </div>
    </div>
</div>





{{#if post.Comments}}
<h1>Comments</h1>
{{else}}
<label>There are no comments on this post yet</label>
{{/if}}
{{#each post.Comments}}

<div class="post">
    <div class="user">
        <span>
            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor"
                class="bi bi-person-circle" viewBox="0 0 16 16">
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                <path fill-rule="evenodd"
                    d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
            </svg>
        </span>
        <span>{{User.name}}</span>
    </div>
    <div class="content">
        <span>{{content}}</span>
        on <span>{{format_date createdAt}}</span>
    </div>

    <div class="like">
        <span>{{likes}} &nbsp;</span>
        {{#if loggedIn}}
        <button id={{id}}>Like</button>
        {{/if}}
    </div>
</div>
{{/each}}
{{#if loggedIn}}
<h2>Comment on this post</h2>
<form>
    <div>
        <div>
            <label>
                Comment
            </label>
            <input type="text" placeholder="Add comment" />
        </div>
    </div>
    <div>
        <input id="submit" data-id={{post.id}} value="Submit" type="button" />
    </div>
</form>
{{/if}}
<script src="/js/post.js"></script>