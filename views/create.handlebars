<div class="create-post">
    <div>
        <h1>Create Post</h1>
    </div>
    <form>
        <div>
            <div>
                <label>Post title</label>
                <input type="text" id="title" placeholder="Enter your post title here"/>
            </div>
        </div>
        <div>
            <div>
                <label>Post content</label>
                <input type="text" id="content" placeholder="Enter your post here" />
            </div>
        </div>
        <div>
            <input id="{{post.id}}" type="submit" value="Save" />
        </div>
    </form>
</div>

<script src="/js/create.js"></script>